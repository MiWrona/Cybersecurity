---
import "../styles/global.css";

import { Image } from "astro:assets";

const { headline, description, imageSrc, imageAlt } = Astro.props;
---

<style>



    .list-element-with-tick {
        color: #474f62;
        position: relative;
        max-width: 627px;
        padding: 24px;
        margin-left: 20px;
        border-radius: 8px;
        box-shadow: 0px 14px 64px -4px rgba(162, 182, 212, 0.05),
            0px 8px 12px -6px rgba(162, 182, 212, 0.05);
    }
    .list-element-headline {
     
        font-family: Mulish;
        font-size: 16px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
    }

    .list-element-description {
      
        font-family: Karla;
        font-size: 12px;
        font-style: normal;
        font-weight: 400;
        line-height: 17px; /* 141.667% */
    }
    .list-element-with-tick:before {
        content: "âœ“";
        position: absolute;
        left: -5px;
        top: 30%;
    }
</style>

<div class="list-element-with-tick">
    <p class="list-element-headline">
        {headline}
    </p>
    <p class="list-element-description">
        {description}
    </p>
</div>
