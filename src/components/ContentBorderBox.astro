---
import '../styles/global.css';
import ArrowInCircle from "../assets/arrow-in-circle.svg"

// const { headline, headlineAccent, description, image, imageAlt} = Astro.props;
const props = Astro.props;
---

<style>

.content-box {
    position: relative;
    width: 300px;
    height: 293px;
    margin-right: 23px;
    margin-bottom: 18px;
    background-color: #F9F9FB;
    border-radius: 5px;
    transition: background-color 2s ease-out;
}

.content-box:hover  {
    border: 1px solid var(--third-color);
    background-color: var(--third-color);
    color: #EFEFEF;
}
.content-box:hover  .content-box-button-icon-background {
    fill: rgb(255, 255, 255), 0, 51);
}
.content-box:hover  .content-box-button-icon {
    opacity: 0.5;
}

.content-box .paragraph {
    height: 58px;
    margin-top: 5px;
}

.content-box--bordered {
    border: 1px solid #EFEFEF;
    
}

.content-box-insides {
    padding: 23px;
    
}

.content-box-icon {
    width: 70px;
    height: 70px;
    margin-bottom: 10px;
    margin-top: 8px;
    border-radius: 11px;
    background: #FFF;   
    border: 12px solid #fff;
    box-shadow: 0px 1px 9px 0px rgba(77, 77, 77, 0.25);
}

.button-icon-on-the-edge {
    position: absolute;
    right: 48px;
    bottom: 40px;
}


.content-box-button-icon-background {
    position: absolute;
    top: -10px;
    fill: var(--third-color)
}
.content-box-button-icon {
    position: absolute;
    right: -25px;
    top: -1px;
}

.headline-5 {
    margin-top: 5px;
    margin-bottom: 5px;

}

.paragraph-5 {
    font-family: Karla;
    font-size: 12px;
}

.content-box-button-link {
    text-decoration: none;
    color: var(--first-color);
}




</style>

<div class="content-box content-box--bordered">
    <a class="content-box-button-link" href={props.href}>
    <div class="content-box-insides">
        <img class="content-box-icon" src={props.image} alt={props.imageAlt} />
        <h5 class="headline-5">{props.headline}</h5>
        <p class="paragraph-5 paragraph--small">{props.description}</p>    
    </div> 
    
    <div class="button-icon-on-the-edge">
        
        <svg class="content-box-button-icon-background" xmlns="http://www.w3.org/2000/svg" width="49" height="32" viewBox="0 0 49 32" fill="none">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M49 9.53674e-06L49 32L15.9999 32C7.16335 32 -7.69202e-05 24.8366 -7.76927e-05 16C-7.84652e-05 7.16345 7.16337 1.31942e-05 15.9999 1.24217e-05L49 9.53674e-06Z" />
        </svg>
         <img class="content-box-button-icon" src={ArrowInCircle.src} alt="Arrow in circle" /> 
       
        </div>
    </a>
</div>