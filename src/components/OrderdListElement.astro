---
import "../styles/global.css";

// const { headline, headlineAccent, description, image, imageAlt} = Astro.props;
const props = Astro.props;
---
<style>
.orderd-list-element {
  display: flex;
  align-items: center;
}

.orderd-list-number {
  color: #D41434;
  font-family: Mulish;
  font-size: 20px;
  font-style: normal;
  font-weight: 700;
  line-height: 23.4px;
  width: 70px;
  height: 70px;
  flex-shrink: 0;
  border-radius: 11px;
  background: #FFF;
  box-shadow: 0px 2px 7px 0px rgba(89, 89, 89, 0.25);
  margin: 14px 27px;
}
.orderd-list-number p {
  text-align: center;
}
.orderd-list-description {
  color: var(--d-9-d-9-d-9, #646B82);
  font-family: Karla;
  font-size: 16px;
  font-style: normal;
  font-weight: 400;
  line-height: 23.4px; /* 146.25% */
  max-width: 440px;
}

</style>


    <div class="orderd-list-element">
      <div class="orderd-list-number"><p>{props.number}</p></div>
      <div class="orderd-list-description">{props.description}</div>
    </div>  
