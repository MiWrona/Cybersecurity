---
import Hamburger from "./Hamburger.astro";
import Logo from "./Logo.astro";
import Navigation from "./Navigation.astro";
import Ue from "./Ue.astro"
---

<style>
    nav {
        max-width: 1443px;
        margin: 0 auto;
        margin-left: 82px;
        margin-right: 82px;
        height: 70px;
    }

    header {
        max-width: 1443px;
        margin: 0 auto;
    }

    @media (max-width: 900px) {
        nav {
            margin-left: 20px;
            margin-right: 20px;
        }
    }
    
</style>

<header>
    <Ue />

    <nav>
        <Logo />

        <Navigation />

        <Hamburger />
    </nav>
</header>
