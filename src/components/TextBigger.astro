  <style>
    #fontsToggle {
      border: 0;
      background: none;
    }
    .regular {
      fill: black;
    }
    .Big {
      fill: transparent;
    }

    :global(.biggerText) .regular {
      fill: transparent;
    }
    :global(.biggerText) .big {
      fill: white;
    }
  </style>

  <script>
    document.addEventListener("astro:page-load", () => {
      const fonts = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("fonts")
        ) {
          return localStorage.getItem("fonts");
        }
        if (window.matchMedia("(prefers-font-size: biggerText)").matches) {
          return "biggerText";
        }
        return "regular";
      })();

      if (fonts === "regular") {
        document.documentElement.classList.remove("biggerText");
      } else {
        document.documentElement.classList.add("biggerText");
      }

      window.localStorage.setItem("fonts", fonts);

      const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("biggerText");

        const isbiggerText = element.classList.contains("biggerText");
        localStorage.setItem("fonts", isbiggerText ? "biggerText" : "regular");
      };

      document
        .getElementById("fontsToggle")
        .addEventListener("click", handleToggleClick);
    });
  </script>

  <script>
    document.addEventListener("astro:after-swap", () => {
      localStorage.fonts === "biggerText"
        ? document.documentElement.classList.add("biggerText")
        : document.documentElement.classList.add("regular");
    });
