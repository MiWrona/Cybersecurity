---
import "../styles/global.css";

import { Image } from "astro:assets";
import Shield from "../assets/shield-icon.svg";
import Arrow from "../assets/red-circle-arrow.svg";
import ButtonLeftArrow from "./ButtonLeftArrow.astro";

const { headline, description, href } = Astro.props;
---

<style>
    .hero-secondary-content {
        width: 100%;
        display: flex;
        justify-content: end;
    }

    .hero-secondary-content-wrapper {
        display: flex;
        width: 550px;
        justify-content: flex-end;
    }

    .hero-secondary-content-text {
        margin-right: 120px;
    }

    .hero-secondary-content-text .paragraph {
        max-width: 293px;
        margin-top: 5px;
    }

    .hero-secondary-content-text .headline-3 {
        margin-bottom: 5px;
    }

    .hero-secondary-img {
        margin-top: 19px;
        margin-right: 30px;
    }
</style>

<div class="hero-secondary-content">
    <div class="hero-secondary-content-wrapper">
        <div class="hero-secondary-image">
            <Image
                class="hero-secondary-img"
                src={Shield}
                alt="Shield"
                widths={[240, 540, 720, Shield.width]}
            />
        </div>
        <div class="hero-secondary-content-text">
            <h3 class="headline-3">{headline}</h3>
            <p class="paragraph">
                {description}
            </p>

            <ButtonLeftArrow 
            href={href}
            description="Czytaj wiÄ™cej"
            
            />
         
        </div>
    </div>
</div>
