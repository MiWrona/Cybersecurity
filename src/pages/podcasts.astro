---
import { Image } from "astro:assets";

import BaseLayout from "../layouts/BaseLayout.astro";
import RightBlob from "../assets/right-blob.svg";
import LeftBlob from "../assets/left-blob.png";
import ContactImage from "../assets/contact-image.png";
import Arrow from "../assets/red-circle-arrow.svg";

import HeroFirst from "../components/HeroFirst.astro";
import NewsletterSection from "../components/NewsletterSection.astro";
---

<style>
    .header-contact {
        display: flex;
        margin: 120px 80px 30px 80px;
        background-color: rgba(255, 255, 255, 0);
    }
    .contact-image {
        margin-top: 35px;
        margin-right: 16px;
    }
    .header-content {
        margin-left: 16px;
    }

    .header-content span {
        display: inline;
    }
    .contact-paragraph {
        font-family: Mulish;
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        text-transform: uppercase;
        max-width: 660px;
    }
    .contact-paragraph--small {
        font-size: 12px;
        color: #b6b6b6;
    }
    input,
    textarea {
        border-radius: 7px;
        border: 1px solid rgba(210, 210, 210, 0.47);
        max-width: 708px;
        height: 48px;
        width: 100%;
        flex-shrink: 0;

        font-family: Karla;
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        text-transform: uppercase;
        padding: 10px;
    }

    input::placeholder,
    textarea::placeholder {
        color: #bfbfbf;
    }

    .input-checkbox {
        width: 16px;
        height: 16px;
        flex-shrink: 0;
        margin-right: 10px;
    }

    textarea {
        height: 148px;
    }

    a {
        text-decoration: none;
    }

    button {
        background: none;
        border: none;
        color: #d41434;

        font-family: Mulish;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 27px; /* 168.75% */
    }

    .button .logo-image {
        margin-right: 10px;
    }

    .button-text {
        font-weight: 600;
        font-family: var(--primary-font);
        font-size: 16px;
    }

    a:hover {
        background-color: rgb(241, 197, 197);
    }
</style>

<BaseLayout>
    <div class="header header-contact">
        <div class="contact-image">
            <Image
                class="logo-image"
                src={ContactImage}
                alt="ContactImage"
                widths={[240, 540, 720, ContactImage.width]}
            />
        </div>
        <div class="header-content">
            <HeroFirst headline="Skontaktuj się " headlineAccent="z nami" />
            <form method="POST">
                <div>
                    <p class="contact-paragraph">IMIĘ I NAZWISKO*</p>
                    <input
                        type="text"
                        name="name"
                        placeholder="Imię i nazwisko"
                    />
                </div>
                <div>
                    <p class="contact-paragraph">E-MAIL*</p>
                    <input type="email" name="email" placeholder="Email" />
                </div>
                <div>
                    <p class="contact-paragraph">WIADOMOŚĆ</p>
                    <textarea name="message" placeholder="Wpisz wiadomość"
                    ></textarea>
                </div>
                <div class="flex align-items">
                    <input
                        class="input-checkbox"
                        type="checkbox"
                        id="scales"
                        name="scales"
                    />
                    <p class="contact-paragraph contact-paragraph--small">
                        Wyrażam zgodę na przetwarzanie moich danych osobowych
                        podanych w powyższym formularzu w celach handlowych i
                        marketingowych przez COIG S.A. oraz przez podmioty
                        trzecie. *
                    </p>
                </div>
                <p class="contact-paragraph contact-paragraph--small">
                    * POLE WYMAGANE
                </p>
                <div class="contact-submit flex align-items">
                    <Image
                        class="logo-image"
                        src={Arrow}
                        alt="Arrow"
                        widths={[240, 540, 720, Arrow.width]}
                    />
                    <button
                        type="submit"
                        class="button margin-top-5 third-color"
                        >Wyślij wiadomość
                    </button>
                </div>
            </form>
        </div>
        <Image
            class="right-top-blob"
            src={RightBlob}
            alt="Right blob"
            widths={[240, 540, 720, RightBlob.width]}
        />
        <Image
            class="left-bottom-blob"
            src={LeftBlob}
            alt="Left blob"
            widths={[240, 540, 720, LeftBlob.width]}
        />
    </div>

    <NewsletterSection />
</BaseLayout>
